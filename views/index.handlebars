
<div class="webname text-center">
<h1>MENU!</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col m6 text-center">
      <h2>Burgers Available</h2>
<ul>
   {{#each burgers}}
          {{#unless this.devoured}}
            <div>
               <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
            </div>
          {{/unless}}
        {{/each}}
        </ul>
</div>

<div class="col m6 text-center">
<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
          {{#if this.devoured}}
             <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
          {{/if}}
        {{/each}}
        </ul>
  </div>
</div>
</div>

<div class="container">
<div class="row">
<div class="col m12 text-center">

<h2>Add A BURGER</h2>
  <div class="form-group">
    <label for="ca">LE BURGER:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add BURGER</button>
</form>

</div>
</div>
</div>